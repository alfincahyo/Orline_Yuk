<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fix"
    tools:context="com.example.orlineyuk.Register">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logooo"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="40dp" />

    <EditText
        android:id="@+id/namauser"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/bginput"
        android:hint="Nama"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="#ffff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_Button="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="190dp" />

    <EditText
        android:id="@+id/nohpuser"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:background="@drawable/bginput"
        android:hint="No. Handphone"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="#ffff"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="245dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:background="@drawable/bginput"
        android:hint="Email"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="#ffff"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="301dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="288dp"
        android:layout_height="40dp"
        android:background="@drawable/bginput"
        android:hint="Password"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColorHint="#ffff"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="352dp" />

    <Button
        android:id="@+id/register"
        android:layout_width="160dp"
        android:layout_height="48dp"
        android:background="@drawable/bgbtn"
        android:text="Join Today"
        android:textAllCaps="false"
        android:textColor="#ffff"
        android:textSize="18sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="444dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:text="Sign Up"
        android:textColor="#FFFF"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
